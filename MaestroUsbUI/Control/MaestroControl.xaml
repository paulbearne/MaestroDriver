<UserControl x:Class="MaestroUsbUI.MaestroControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:MaestroUsbUI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="40"
             d:DesignWidth="600"
             mc:Ignorable="d">

    <Grid Margin="0,0,0,0">
        <StackPanel Orientation="Vertical">

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <TextBlock Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           Text="#" />
                <TextBlock Name="Channel"
                           VerticalAlignment="Center"
                           Padding="0,0,5,0"
                           Text="0" />
                <Slider x:Name="slPosition"
                        Width="250"
                        Height="40"
                        Maximum="2500"
                        Minimum="500"
                        TickFrequency="500"
                        TickPlacement="Outside"
                        ValueChanged="slPosition_ValueChanged"
                        Value="1500" />
                <StackPanel Width="100"
                            Height="40"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Orientation="Horizontal">
                    <TextBox Name="tbTarget"
                             Margin="5,0,0,0"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             BorderThickness="0"
                             InputScope="Number"
                             PlaceholderText="1500"
                             TextChanged="tbTarget_TextChanged" />
                </StackPanel>
                <StackPanel Height="40"
                            Margin="10,0,0,0"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Orientation="Horizontal"
                            Padding="2,0,0,0">
                    <TextBox x:Name="speedValue"
                             Width="50"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             BorderBrush="{x:Null}"
                             BorderThickness="1"
                             InputScope="Number"
                             IsSpellCheckEnabled="False"
                             PlaceholderText="0"
                             Text=""
                             TextChanged="speedValue_TextChanged"
                             TextWrapping="Wrap" />

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                        <Image Name="speedUp"
                               Width="20"
                               Height="17"
                               PointerPressed="speedUp_PointerPressed"
                               Source="btnup.png" />
                        <Image Name="speedDown"
                               Width="20"
                               Height="17"
                               PointerPressed="speedDown_PointerPressed"
                               Source="btndown.png" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Height="40"
                            Margin="10,0,0,0"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Orientation="Horizontal"
                            Padding="2,0,0,0">
                    <TextBox x:Name="accelerationValue"
                             Width="50"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             BorderBrush="{x:Null}"
                             BorderThickness="1"
                             InputScope="Number"
                             IsSpellCheckEnabled="False"
                             Padding="10,3,6,5"
                             PlaceholderText="0"
                             Text=""
                             TextChanged="accelerationValue_TextChanged"
                             TextWrapping="Wrap" />

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                        <Image Name="accelerationUp"
                               Width="20"
                               Height="17"
                               PointerPressed="accelerationUp_PointerPressed"
                               Source="btnup.png" />
                        <Image Name="accelrationDown"
                               Width="20"
                               Height="17"
                               PointerPressed="accelrationDown_PointerPressed"
                               Source="btndown.png" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </StackPanel>


    </Grid>
</UserControl>
